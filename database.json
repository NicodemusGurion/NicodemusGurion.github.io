---
layout: null
permalink: /database.json
---
{{- site.time -}}
{% assign searchdb = "" | split: "," %}
{% assign postdb = "" | split: "," %}
{% for post in site.posts %}
  {% assign content = post.content | replace: "&nbsp;", " " %}
  {% assign words = content | strip_html | strip_newlines | slugify: "latin" | split: "-" %}
  {% for word in words %}
    {% unless searchdb contains word %}
      {% assign searchdb = searchdb | push: word %}
    {% endunless %}
    {% assign wordIndex = searchdb | index: word %}
    {% unless postdb[wordIndex] contains post.url %}
      {% assign postdb[wordIndex] = postdb[wordIndex] | push: post.url %}
    {% endunless %}
  {% endfor %}
{% endfor %}
{{ postdb | json }}
{{ searchdb | json }}

